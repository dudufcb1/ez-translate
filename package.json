{
  "name": "ez-translate",
  "version": "1.0.0",
  "description": "WordPress multilingual plugin with Gutenberg integration",
  "main": "index.js",
  "scripts": {
    "build": "wp-scripts build src/gutenberg/sidebar.js --output-path=assets/js",
    "start": "wp-scripts start src/gutenberg/sidebar.js --output-path=assets/js",
    "dev": "wp-scripts start src/gutenberg/sidebar.js --output-path=assets/js",
    "lint:js": "wp-scripts lint-js src/",
    "format:js": "wp-scripts format-js src/"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "multilingual",
    "gutenberg",
    "translation"
  ],
  "author": "EZ Translate Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@wordpress/scripts": "^26.0.0"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^6.0.0",
    "@wordpress/components": "^25.0.0",
    "@wordpress/data": "^9.0.0",
    "@wordpress/edit-post": "^7.0.0",
    "@wordpress/element": "^5.0.0",
    "@wordpress/i18n": "^4.0.0",
    "@wordpress/plugins": "^6.0.0"
  }
}
